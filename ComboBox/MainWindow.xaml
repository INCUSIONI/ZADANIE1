<Window x:Class="ComboBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComboBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,10,0,0">
        <ComboBox Height="68" VerticalAlignment="Top" Margin="325,0,312,0">
            <ComboBoxItem IsSelected="True">
                <StackPanel Orientation="Horizontal">
                    <Image Source="fon.jpg"  Width="60" />
                    <TextBlock>green button</TextBlock>
                </StackPanel>
            </ComboBoxItem>
            <StackPanel Orientation="Horizontal">
                <Image Source="fon2.png" Width="60" />
                <TextBlock>blue button</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Image Source="fon3.jpg" Width="60" />
                <TextBlock>red button</TextBlock>
            </StackPanel>
        </ComboBox>



    </Grid>
</Window>
